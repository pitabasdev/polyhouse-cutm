			crossorigin="anonymous"
		></script>

		<script>
			AOS.init();
			var myModal = new bootstrap.Modal(document.getElementById("myModal"));
			setInterval(function () {
				angular
					.element(document.getElementsByTagName("body"))
					.scope()
					.getallcurvalue();
			}, 20000);
			setInterval(function () {
				angular
					.element(document.getElementsByTagName("body"))
